@model Norget.Models.Usuario;

@{
    ViewData["Title"] = "Editar";

}


<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="NomeCli" class="control-label"></label>
                <input asp-for="NomeCli" class="form-control" />
                <span asp-validation-for="NomeCli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailCli" class="control-label"></label>
                <input asp-for="EmailCli" class="form-control" />
                <span asp-validation-for="EmailCli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SenhaCli" class="control-label"></label>
                <input asp-for="SenhaCli" class="form-control" />
                <span asp-validation-for="SenhaCli" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-controller="Usuario" asp-action="PainelUsuario">Voltar</a>
</div>